{
    "name": "romeo7/rock-template",
    "description": "Flexible template engine for PHP with MODx-like syntax.",
    "keywords": ["template", "template-engine", "templating"],
    "type": "library",
    "license": "MIT",
    "support": {
        "email": "serggalka@gmail.com",
        "issues": "https://github.com/romeOz/rock-template/issues",
        "source": "https://github.com/romeOz/rock-template"
    },
    "authors": [
        {
            "name": "Ruslan",
            "email": "serggalka@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "romeo7/rock-cache" : "*",
        "phpunit/phpunit": "4.2.*"
    },
    "suggest": {
        "romeo7/rock-cache": "required by rock-cache"
    },
    "autoload": {
        "psr-4": {
            "rock\\template\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}